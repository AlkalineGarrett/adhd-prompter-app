<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Exact alarms (required for alarm clock functionality) -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- Notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Full-screen intent for lock screen display -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <!-- Vibrate for alarm -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Boot receiver to reschedule alarms -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Set lock screen wallpaper for urgent state -->
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:name=".TaskBrainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskBrain">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Full-screen alarm activity -->
        <activity
            android:name=".ui.alarm.AlarmActivity"
            android:exported="false"
            android:showOnLockScreen="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.TaskBrain" />

        <!-- Error dialog activity for showing errors from BroadcastReceivers -->
        <activity
            android:name=".ui.alarm.AlarmErrorActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskBrain.Transparent" />

        <!-- Alarm trigger receiver -->
        <receiver
            android:name=".receiver.AlarmReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="org.alkaline.taskbrain.ACTION_ALARM_TRIGGERED" />
            </intent-filter>
        </receiver>

        <!-- Alarm action receiver (Done, Snooze, Cancel) -->
        <receiver
            android:name=".receiver.AlarmActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="org.alkaline.taskbrain.ACTION_MARK_DONE" />
                <action android:name="org.alkaline.taskbrain.ACTION_SNOOZE" />
                <action android:name="org.alkaline.taskbrain.ACTION_CANCEL" />
            </intent-filter>
        </receiver>

        <!-- Boot receiver to reschedule alarms -->
        <receiver
            android:name=".receiver.BootReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>